<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgr"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv1_memory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/cardback"
        app:layout_constraintBottom_toTopOf="@+id/iv4_memory"
        app:layout_constraintEnd_toStartOf="@+id/iv2_memory"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_vida1_memory" />

    <ImageView
        android:id="@+id/iv2_memory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/cardback"
        app:layout_constraintBottom_toTopOf="@+id/iv5_memory"
        app:layout_constraintEnd_toStartOf="@+id/iv3_memory"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv1_memory"
        app:layout_constraintTop_toBottomOf="@+id/iv_vida1_memory" />

    <ImageView
        android:id="@+id/iv3_memory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/cardback"
        app:layout_constraintBottom_toTopOf="@+id/iv6_memory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv2_memory"
        app:layout_constraintTop_toBottomOf="@+id/iv_vida1_memory" />

    <ImageView
        android:id="@+id/iv4_memory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/cardback"
        app:layout_constraintBottom_toTopOf="@+id/iv7_memory"
        app:layout_constraintEnd_toStartOf="@+id/iv5_memory"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv1_memory" />

    <ImageView
        android:id="@+id/iv5_memory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/cardback"
        app:layout_constraintBottom_toTopOf="@+id/iv8_memory"
        app:layout_constraintEnd_toStartOf="@+id/iv6_memory"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv4_memory"
        app:layout_constraintTop_toBottomOf="@+id/iv2_memory" />

    <ImageView
        android:id="@+id/iv6_memory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/cardback"
        app:layout_constraintBottom_toTopOf="@+id/iv9_memory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv5_memory"
        app:layout_constraintTop_toBottomOf="@+id/iv3_memory" />

    <ImageView
        android:id="@+id/iv7_memory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/cardback"
        app:layout_constraintBottom_toTopOf="@+id/iv10_memory"
        app:layout_constraintEnd_toStartOf="@+id/iv8_memory"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv4_memory" />

    <ImageView
        android:id="@+id/iv8_memory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/cardback"
        app:layout_constraintBottom_toTopOf="@+id/iv11_memory"
        app:layout_constraintEnd_toStartOf="@+id/iv9_memory"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv7_memory"
        app:layout_constraintTop_toBottomOf="@+id/iv5_memory" />

    <ImageView
        android:id="@+id/iv9_memory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/cardback"
        app:layout_constraintBottom_toTopOf="@+id/iv12_memory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv8_memory"
        app:layout_constraintTop_toBottomOf="@+id/iv6_memory" />

    <ImageView
        android:id="@+id/iv10_memory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:adjustViewBounds="true"
        android:src="@drawable/cardback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv11_memory"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv7_memory" />

    <ImageView
        android:id="@+id/iv11_memory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:adjustViewBounds="true"
        android:src="@drawable/cardback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv12_memory"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv10_memory"
        app:layout_constraintTop_toBottomOf="@+id/iv8_memory" />

    <ImageView
        android:id="@+id/iv12_memory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:adjustViewBounds="true"
        android:src="@drawable/cardback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv11_memory"
        app:layout_constraintTop_toBottomOf="@+id/iv9_memory" />

    <ImageView
        android:id="@+id/iv_vida1_memory"
        android:layout_width="32dp"
        android:layout_height="29dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/iv_vida2_memory"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hp" />

    <ImageView
        android:id="@+id/iv_vida2_memory"
        android:layout_width="32dp"
        android:layout_height="29dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_vida1_memory"
        app:layout_constraintEnd_toStartOf="@+id/iv_vida3_memory"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_vida1_memory"
        app:srcCompat="@drawable/hp" />

    <ImageView
        android:id="@+id/iv_vida3_memory"
        android:layout_width="32dp"
        android:layout_height="29dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_vida1_memory"
        app:layout_constraintStart_toEndOf="@+id/iv_vida2_memory"
        app:srcCompat="@drawable/hp" />

    <Button
        android:id="@+id/btn_memoryIntentar"
        android:layout_width="204dp"
        android:layout_height="242dp"
        android:text="Reintentar"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/memory_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btn_memoryIntentar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>








